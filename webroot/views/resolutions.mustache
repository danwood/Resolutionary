{{>header}}

{{! ASSUMES WE ARE AUTHENTICATED TO SEE THIS PAGE. }}

<h1>My Resolutions</h1>

    {{#my_resolutions}}
    <div class="row">
      <div class="three columns">
		<h5><a href="/editresolution/{{c}}">TITLE: {{currentTitle}}</a></h5>
      </div>
      <div class="six columns">
		<p><span>AUTHOR ID: {{authorID}}</span></p>
      </div>
      <div class="three columns">
PRIVATE NOTES: {{{privateNotesMarkdownRendered}}}
      </div>
    </div>
    {{/my_resolutions}}
	{{^my_resolutions}}
	<p>No resolutions of mine…</p>
	{{/my_resolutions}}

<h1>Public Resolutions</h1>

    {{#public_resolutions}}
    <div class="row">
      <div class="three columns">
		<h5><a href="/resolution/{{c}}">TITLE: {{currentTitle}}</a></h5>
      </div>
      <div class="six columns">
		<p><span>AUTHOR ID:{{authorID}}</span></p>
      </div>
      <div class="three columns">
		PUBLIC NOTES: {{{publicNotesMarkdownRendered}}}
      </div>
    </div>
    {{/public_resolutions}}
	{{^public_resolutions}}
	<p>No public resolutions…</p>
	{{/public_resolutions}}


{{>footer}}

